@model QuanLyCuaHangThoiTrang.Model.BaoCaoTonKho

@{
    ViewBag.Title = "LẬP BÁO CÁO TỒN KHO";
}

<div class="card" style="width: 25%; float: left !important">
    <div class="form-horizontal">
        <div>
            <div class="pull-left">
                <p class="card-title-heading" id="pageTitle">Báo Cáo Tồn Kho</p>
            </div>
            <div class="clearfix"></div>
        </div>
        <hr />
        <div>
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="control-label custom-label required">Tháng</label>
                <div class="col-md-10 custom-input">
                    <input required class="form-control" type="month" id="thangNam">
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaNguoiDung, "Người Lập", htmlAttributes: new { @class = "control-label custom-label" })
                <div class="col-md-10 custom-input">
                    @Html.DropDownList("MaNguoiDung", null, htmlAttributes: new { @class = "form-control minimal", @id = "maNguoiDung", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.MaNguoiDung, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TongSoHangHoa, htmlAttributes: new { @class = "control-label custom-label" })
                <div class="col-md-10 custom-input">
                    @Html.EditorFor(model => model.TongSoHangHoa, new { htmlAttributes = new { @class = "form-control", @id = "tongSoHangHoa", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.TongSoHangHoa, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NgayLap, htmlAttributes: new { @class = "control-label custom-label  required" })
                <div class="col-md-10 custom-input">
                    @Html.EditorFor(model => model.NgayLap, new { htmlAttributes = new { @class = "form-control datetimepicker", @id = "ngayLap", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.NgayLap, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 custom-input">
                    <input type="submit" id="submit" value="Lưu" class="btn btn-primary" />
                </div>
            </div>
            <hr />
            <div class="form-group" style="text-align: center">
                <label style="color:red; font-weight: bold;">(*) Lưu ý tiền được tính theo VNĐ</label>
            </div>
        </div>
    </div>
</div>
<div class="card" style="width: 70%; float: left !important; margin-left: 2%">
    <div class="form-horizontal">
        <div>
            <div class="pull-left">
                <p class="card-title-heading" id="pageTitle">Chi Tiết Báo Cáo Tồn Kho</p>
            </div>
            <div class="clearfix"></div>
        </div>
        <hr />
        <div id="orderItems" class="table-responsive"></div>
        <div id="Items" hidden class="table-responsive"></div>
    </div>
</div>
