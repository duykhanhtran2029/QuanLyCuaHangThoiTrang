@model QuanLyCuaHangThoiTrang.Model.PhieuNhapKho

@{
    ViewBag.Title = "CHỈNH SỬA PHIẾU NHẬP KHO";
    ViewBag.SubTitle = "Tùy chỉnh các trường thông tin ở phía dưới";
}
<div class="card" style="width: 25%; float: left !important">
    <div class="form-horizontal">
        <div>
            <div class="pull-left">
                <p class="card-title-heading" id="pageTitle">Phiếu Nhập Kho</p>
            </div>
            <div class="clearfix"></div>
        </div>
        <hr />
        <div>
            @Html.AntiForgeryToken()
            <div hidden>
                @Html.EditorFor(model => model.SoPhieuNhapKho, new { htmlAttributes = new { @class = "form-control", @id = "soPhieuNhapKho" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.NgayNhapKho, htmlAttributes: new { @class = "control-label custom-label required" })
                <div class="col-md-10 custom-input">
                    @Html.EditorFor(model => model.NgayNhapKho, new { htmlAttributes = new { @class = "form-control datetimepicker", @id = "ngayNhapKho", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.NgayNhapKho, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaNguoiDung, "Người Lập", htmlAttributes: new { @class = "control-label custom-label" })
                <div class="col-md-10 custom-input">
                    @Html.DropDownList("MaNguoiDung", null, htmlAttributes: new { @class = "form-control minimal", @id = "maNguoiDung", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.MaNguoiDung, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaNhaCungCap, "Nhà Cung Cấp", htmlAttributes: new { @class = "control-label custom-label required" })
                <div class="col-md-10 custom-input">
                    @Html.DropDownList("MaNhaCungCap", null, htmlAttributes: new { @class = "form-control minimal", @id = "maNhaCungCap", @required = "required" })
                    @Html.ValidationMessageFor(model => model.MaNhaCungCap, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TongTien, htmlAttributes: new { @class = "control-label custom-label" })
                <div class="col-md-10 custom-input">
                    @Html.EditorFor(model => model.TongTien, new { htmlAttributes = new { @class = "form-control", @id = "tongTien", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.TongTien, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GhiChu, htmlAttributes: new { @class = "control-label custom-label" })
                <div class="col-md-10 custom-input">
                    @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control", @id = "ghiChu" } })
                    @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NgayChinhSua, htmlAttributes: new { @class = "control-label custom-label" })
                <div class="col-md-10 custom-input">
                    @Html.EditorFor(model => model.NgayChinhSua, new { htmlAttributes = new { @class = "form-control datetimepicker", @id = "ngayChinhSua", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.NgayChinhSua, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 custom-input">
                    <input type="submit" id="submit" value="Lưu" class="btn btn-primary" />
                </div>
            </div>
            <hr />
            <div class="form-group" style="text-align: center">
                <label style="color:red; font-weight: bold;">(*) Lưu ý tiền được tính theo VNĐ</label>
            </div>
        </div>
    </div>
</div>
<div class="card" style="width: 70%; float: left !important; margin-left: 2%">
    <div class="form-horizontal">
        <div>
            <div class="pull-left">
                <p class="card-title-heading" id="pageTitle">Thông Tin Hàng Hóa</p>
            </div>
            <div class="clearfix"></div>
        </div>
        <hr />
        <form>
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="control-label custom-label">Hàng Hóa</label>
                <div class="col-md-10 custom-input">
                    @Html.DropDownList("MaHangHoa", (SelectList)ViewBag.MaHangHoa, null, new { @class = "form-control minimal" })
                </div>
            </div>
            <hr />
            <table>
                <tr>
                    <td style="padding: 0px 10px 10px 12px">Sản Phẩm</td>
                    <td style="padding: 0px 10px 10px 12px">Đơn Vị</td>
                    <td style="padding: 0px 10px 10px 12px">Size</td>
                    <td style="padding: 0px 10px 10px 12px">Số Lượng Nhập</td>
                    <td style="padding: 0px 10px 10px 12px">Giá Nhập</td>
                    <td style="padding: 0px 10px 10px 12px">Thành Tiền</td>
                    <td style="padding: 0px 10px 10px 12px"></td>
                </tr>

                <tr class="mycontainer" id="mainrow">
                    <td style="padding: 0px 10px" width="25%">
                        <input id="tenHangHoa" disabled="disabled" type="text" class="form-control rounded" />
                    </td>
                    <td style="padding: 0px 10px" width="10%">
                        <input type="text" id="donViTinh" class="form-control rounded" disabled="disabled" />
                    </td>
                    <td style="padding: 0px 10px" width="10%">
                        <input type="text" id="size" class="form-control rounded" disabled="disabled" />
                    </td>
                    <td style="padding: 0px 10px">
                        <input type="text" id="soLuongNhap" name="soLuongNhap" class="form-control rounded" required onkeypress="return checkNumber(event, this)" maxlength="4" min="1" />
                    </td>
                    <td style="padding: 0px 10px">
                        <input type="text" id="giaNhap" class="form-control rounded" onkeypress="return checkNumber(event, this)" maxlength="10" />
                    </td>

                    <td style="padding: 0px 10px">
                        <input type="text" id="thanhTien" disabled="disabled" class="form-control rounded" />

                    </td>
                    <td style="padding: 0px 10px">
                        <input type="button" id="add" value="Thêm" style="padding:4px" class="btn btn-lg btn-success btn-xs btn-push" />
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td style="padding: 10px 10px 0px 12px; color: red">
                        <h5 style="margin-top:-1%" hidden class="messageError  notifyinputQuantity messageErrorinputQuantity">Nhập số lượng!</h5>
                        <h5 style="margin-top:-1%" hidden class="messageError  notifyinputQuantity1 messageErrorinputQuantity1">Nhập số lượng!</h5>
                    </td>
                    <td style="padding: 10px 10px 0px 12px; color: red">
                        <h5 style="margin-top:-1%" hidden class="messageError  notifyinputPrice messageErrorinputPrice">Nhập giá!</h5>
                        <h5 style="margin-top:-1%" hidden class="messageError  notifyinputQuantity2 messageErrorinputQuantity2">Giá nhập phải lớn hơn 0</h5>
                    </td>
                    <td></td>
                </tr>
            </table>
            <span id="productItemError" class="messageError" style="color:red"></span>
            <hr style="margin-top: 10px !important" />
            <div id="orderItems" class="table-responsive"></div>
            <div id="Items" hidden class="table-responsive"></div>
        </form>
    </div>
</div>
