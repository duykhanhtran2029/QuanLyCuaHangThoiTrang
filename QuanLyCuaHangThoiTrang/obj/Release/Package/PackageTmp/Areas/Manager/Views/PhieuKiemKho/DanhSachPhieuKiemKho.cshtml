@using PagedList.Mvc
@model PagedList.IPagedList<QuanLyCuaHangThoiTrang.Model.PhieuKiemKho>
@{ Layout = null; }
<div class="table-responsive">
    <table class="table table-bordered table-middle table-lilac" id="datatable">
        <thead>
            <tr>
                <th class="text-center" style="width: 17%;">Số Phiếu</th>
                <th class="text-center" style="width: 20%;">Ngày Kiểm Kho</th>
                <th class="text-center" style="width: 20%;">Người Lập</th>
                <th class="text-center" style="width: 25%;">Ghi Chú</th>
                <th class="text-center" style="width: 18%;">Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (!item.IsDeleted)
                {
            <tr class="border-warning" style="text-align:center">
                <td>
                    @item.SoPhieuKiemKho
                </td>
                <td>
                    @item.NgayKiemKho.ToString("MM/dd/yyyy")
                </td>
                <td>
                    @item.NguoiDung.TenNguoiDung
                </td>
                <td>
                    @item.GhiChu
                </td>
                <td class="text-center">
                    <a href="@Url.Action("Edit", new { id = item.SoPhieuKiemKho })" class="btn btn-sm btn-success btn-xs btn-push"><i class="fas fa-edit"></i></a>
                    <a href="@Url.Action("Delete", new { id = item.SoPhieuKiemKho })" class="btn btn-sm btn-success btn-xs btn-push"><i class="fas fa-trash-alt"></i></a>
                    <a href="@Url.Action("Details", new { id = item.SoPhieuKiemKho })" class="btn btn-sm btn-success btn-xs btn-push"><i class="fas fa-info-circle"></i></a>
                </td>
            </tr>
            }
            }
        </tbody>
    </table>
    <div class="pull-left" style="padding-top:20px">
        <h3 class="panel-title">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount </h3>
    </div>
    <div class="pull-right">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>
