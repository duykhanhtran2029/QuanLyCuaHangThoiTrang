@model IEnumerable<QuanLyCuaHangThoiTrang.Model.HangHoa>

@{
    ViewBag.Title = "QUẢN LÝ HÀNG HÓA";
    ViewBag.SubTitle = "Quản lý chức năng <code>Thêm mới</code> <code>Chi tiết</code> <code> Chỉnh sửa</code> <code> Xóa</code> Hàng Hóa.";
}
<title id="pageTitle">
    Quản Lý  Hàng Hóa
</title>
<div id="Modal" class="modal fade" role="dialog">
</div>
<div class="card">
    <div>
        <div class="pull-left">
            <p class="card-title-heading">Danh Sách Hàng Hóa</p>
        </div>
        <div class="pull-right">
            <a href="@Url.Action("Create")" class="btn btn-sm btn-success btn-xs btn-push" style="padding: 5px 10px !important;">
                <i class="fas fa-plus"></i>
                <span style="margin: 15px 0 !important;">Thêm Hàng Hóa</span>
            </a>
        </div>
        <div class="clearfix"></div>
    </div>
    <hr />
    <div>
        @using (Ajax.BeginForm("DanhSachHangHoa", "HangHoa", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "list", LoadingElementId = "loading", HttpMethod = "Get", OnComplete = "LoadDatatable" }))
        {
            <div class="form-group">
                <div class="input-group">
                    @Html.TextBox("SearchString", null, new { @class = "form-control", @placeholder = "Tìm kiểm theo tên hàng hóa hoặc thương hiệu" })
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                    </span>
                </div>
            </div>
        }
        <div id="list">
            @{Html.RenderAction("DanhSachHangHoa", "HangHoa");}
        </div>
    </div>
</div>
<button class="btn btn-sm btn-success btn-xs btn-push" id="large-button" onclick="Open('LoaiHangHoa/Index')">
    <i class="fas fa-list"></i>
    <span style="margin: 15px 0 !important;">Quản Lý Loại Hàng Hóa</span>
</button>