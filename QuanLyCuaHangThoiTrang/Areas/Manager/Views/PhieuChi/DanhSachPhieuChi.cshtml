@using PagedList.Mvc
@model PagedList.IPagedList<QuanLyCuaHangThoiTrang.Model.PhieuChi>
@{
    Layout = null;
}

<div class="table-responsive">
    <table class="table table-bordered table-middle table-lilac">
        <thead>
            <tr>
                <th class="text-center" style="width: 5%;">Số phiếu chi</th>
                <th class="text-center" style="width: 15%;">Ngày chi</th>
                <th class="text-center" style="width: 20%;">Tên người dùng</th>
                <th class="text-center" style="width: 25%;">Tổng tiền chi</th>
                <th class="text-center" style="width: 20%;">Ghi Chú</th>
                <th class="text-center" style="width: 15%;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (!item.IsDeleted)
                {
            <tr class="border-warning" style="text-align:center">
                <td>
                    @item.SoPhieuChi
                </td>
                <td>
                    @item.NgayChi
                </td>
                <td>
                    @item.MaNguoiDung
                </td>
                @*<td>
                    @item.SoPhieuNhapKho
                </td>*@
                <td>
                    @item.TongTienChi
                </td>
                <td>
                    @item.GhiChu
                </td>
                <td class="text-center">
                    <a href="@Url.Action("Edit", new { id = item.SoPhieuChi })" class="btn btn-sm btn-success btn-xs btn-push"><i class="fas fa-edit"></i></a>
                    <a href="@Url.Action("Delete", new { id = item.SoPhieuChi })" class="btn btn-sm btn-success btn-xs btn-push"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
                }
            }
        </tbody>
    </table>
    <div class="pull-left" style="padding-top:20px">
        <h3 class="panel-title">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount </h3>
    </div>
    <div class="pull-right">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>
