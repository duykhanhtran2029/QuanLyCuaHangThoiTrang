@model QuanLyCuaHangThoiTrang.Model.NguoiDung

@{
    ViewBag.Title = "Delete";
    Layout = null;
}


<div class="card popupcontent">
    <div class="form-horizontal">
        <div>
            <div class="pull-left">
                <p class="card-title-heading" id="pageTitle">Bạn có muốn xóa người dùng này?</p>
            </div>
            <div class="clearfix"></div>
        </div>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="grid-container" style="grid-template-columns: auto">
                <div class="form-group">
                    @Html.LabelFor(model => model.TenNguoiDung, "Tên nhân viên", htmlAttributes: new { @class = "control-label custom-label" })
                    <div class="col-md-10 custom-input">
                        @Html.EditorFor(model => model.TenNguoiDung, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DiaChi, "Địa chỉ", htmlAttributes: new { @class = "control-label custom-label" })
                    <div class="col-md-10 custom-input">
                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SoDienThoai, "SĐT", htmlAttributes: new { @class = "control-label custom-label" })
                    <div class="col-md-10 custom-input">
                        @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, "Tên người dùng", htmlAttributes: new { @class = "control-label custom-label" })
                    <div class="col-md-10 custom-input">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MaChucVu, "Chức Vụ", htmlAttributes: new { @class = "control-label custom-label" })
                    <div class="col-md-10 custom-input">
                        @Html.EditorFor(model => model.ChucVu.TenChucVu, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    </div>
                </div>
            </div>
            <div>
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn btn-danger" />
                </div>
            </div>
        }
    </div>
</div>

