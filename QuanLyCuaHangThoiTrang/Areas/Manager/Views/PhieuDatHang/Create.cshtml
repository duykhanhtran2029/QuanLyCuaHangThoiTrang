@model QuanLyCuaHangThoiTrang.Model.PhieuDatHang

@{
    ViewBag.Title = "LẬP PHIẾU ĐẶT HÀNG";
    ViewBag.SubTitle = "Nhập đầy đủ các trường thông tin yêu cầu ở phía dưới";
}

<div class="card" style="width: 25%; float: left !important">
    <div class="form-horizontal">
        <div>
            <div class="pull-left">
                <p class="card-title-heading" id="pageTitle">Phiếu Đặt Hàng</p>
            </div>
            <div class="clearfix"></div>
        </div>
        <hr />
        <div>
            @Html.AntiForgeryToken()
            <input type="hidden" id="tonkho-pdh"/>
            <div class="form-group">
                @Html.LabelFor(model => model.NgayDat, htmlAttributes: new { @class = "control-label custom-label required" })
                <div class="col-md-10 custom-input">
                    @Html.EditorFor(model => model.NgayDat, new { htmlAttributes = new { @class = "form-control datetimepicker", @id = "ngaydat-pdh", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.NgayDat, "", new { @class = "text-danger" })
                    
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaNguoiDung, "Người Lập", htmlAttributes: new { @class = "control-label custom-label" })
                <div class="col-md-10 custom-input">
                    @Html.DropDownList("MaNguoiDung", null, htmlAttributes: new { @class = "form-control minimal", @id = "maNguoiDung-pdh", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.MaNguoiDung, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TenKhachHang, "Tên Khách hàng", htmlAttributes: new { @class = "control-label custom-label required" })
                <div class="col-md-10 custom-input">
                    @Html.EditorFor(model => model.TenKhachHang, new { htmlAttributes = new { @class = "form-control", @id = "tenkhachhang-pdh", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.TenKhachHang, "", new { @class = "text-danger" })
                    <div id="warning-tenkhachhang"></div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SoDienThoai, htmlAttributes: new { @class = "control-label custom-label required" })
                <div class="col-md-10 custom-input">
                    @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control", @required = "required", @id = "sodienthoai-pdh", @onkeypress = "return checkNumber(event, this)", @maxlength = "11", @min = "6" } })
                    @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                    <div id="warning-sodienthoai"></div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Diachi, htmlAttributes: new { @class = "control-label custom-label required" })
                <div class="col-md-10 custom-input">
                    @Html.EditorFor(model => model.Diachi, new { htmlAttributes = new { @class = "form-control", @id = "diachi-pdh", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Diachi, "", new { @class = "text-danger" })
                    <div id="warning-diachi"></div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label custom-label" })
                <div class="col-md-10 custom-input">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @id = "email-pdh" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TongTien, htmlAttributes: new { @class = "control-label custom-label required" })
                <div class="col-md-10 custom-input">
                    @Html.EditorFor(model => model.TongTien, new { htmlAttributes = new { @class = "form-control", @id = "tongtien-pdh", @disabled = "disabled", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.TongTien, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.HinhThucThanhToan, htmlAttributes: new { @class = "control-label custom-label required" })
                <div class="col-md-10 custom-input">
                    @Html.EditorFor(model => model.HinhThucThanhToan, new { htmlAttributes = new { @class = "form-control", @id = "hinhthucthanhtoan-pdh", @disabled = "disabled", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.HinhThucThanhToan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GhiChu, htmlAttributes: new { @class = "control-label custom-label" })
                <div class="col-md-10 custom-input">
                    @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control", @id = "ghiChu-pdh" } })
                    @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NgayGiao, htmlAttributes: new { @class = "control-label custom-label required" })
                <div class="col-md-10 custom-input">
                    @Html.EditorFor(model => model.NgayGiao, new { htmlAttributes = new { @class = "form-control datetimepicker", @id = "ngaygiao-pdh", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.NgayGiao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DaXacNhan, htmlAttributes: new { @class = "control-label custom-label required" })
                <div class="col-md-10 custom-input">
                    @Html.EditorFor(model => model.DaXacNhan, new { htmlAttributes = new { @class = "form-control", @id = "daxacnhan-pdh", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.DaXacNhan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DaThanhToan, htmlAttributes: new { @class = "control-label custom-label required" })
                <div class="col-md-10 custom-input">
                    @Html.EditorFor(model => model.DaThanhToan, new { htmlAttributes = new { @class = "form-control", @id = "dathanhtoan-pdh", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.DaThanhToan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 custom-input">
                    <input type="submit" id="submit" value="Lưu" class="btn btn-primary" />
                </div>
            </div>
            <hr />
            <div class="form-group" style="text-align: center">
                <label style="color:red; font-weight: bold;">(*) Lưu ý tiền được tính theo VNĐ</label>
            </div>
        </div>
    </div>
</div>
<div class="card" style="width: 70%; float: left !important; margin-left: 2%">
    <div class="form-horizontal">
        <div>
            <div class="pull-left">
                <p class="card-title-heading" id="pageTitle">Thông Tin Hàng Hóa</p>
            </div>
            <div class="clearfix"></div>
        </div>
        <hr />
        <form>
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="control-label custom-label">Hàng Hóa</label>
                <div class="col-md-10 custom-input">
                    @Html.DropDownList("MaHangHoa-pdh", (SelectList)ViewBag.MaHangHoa, null, new { @class = "form-control minimal" })
                </div>
            </div>
            <hr />
            <table>
                <tr>
                    <td style="padding: 0px 10px 10px 12px">Sản Phẩm</td>
                    <td style="padding: 0px 10px 10px 12px">Size</td>
                    <td style="padding: 0px 10px 10px 12px">Số Lượng </td>
                    <td style="padding: 0px 10px 10px 12px">Giá (Đã áp dụng giảm giá)</td>
                    <td style="padding: 0px 10px 10px 12px">Giảm Giá</td>
                    <td style="padding: 0px 10px 10px 12px">Thành Tiền</td>
                    <td style="padding: 0px 10px 10px 12px"></td>
                </tr>

                <tr class="mycontainer" id="mainrow">
                    <td style="padding: 0px 10px" width="25%">
                        <input id="tenHangHoa-pdh" disabled="disabled" type="text" class="form-control rounded" />
                    </td>
                    <td style="padding: 0px 10px" width="10%">
                        <input type="text" id="size-pdh" class="form-control rounded" disabled="disabled" />
                    </td>
                    <td style="padding: 0px 10px" width="5%">
                        <input type="text" id="soLuong-pdh" name="soLuongNhap" class="form-control rounded" required onkeypress="return checkNumber(event, this)" maxlength="4" min="1" />
                    </td>
                    <td style="padding: 0px 10px">
                        <input type="text" id="gia-pdh" class="form-control rounded" disabled="disabled" />
                    </td>

                    <td style="padding: 0px 10px">
                        <input type="text" id="giamgia-pdh" class="form-control rounded" disabled="disabled" />
                    </td>

                    <td style="padding: 0px 10px">
                        <input type="text" id="thanhTien-pdh" disabled="disabled" class="form-control rounded" />

                    </td>
                    <td style="padding: 0px 10px">
                        <input type="button" id="add-pdh" value="Thêm" style="padding:4px" class="btn btn-lg btn-success btn-xs btn-push" />
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>

                    <td style="padding: 10px 10px 0px 12px; color: red">
                        <h5 style="margin-top:-1%" hidden class="messageError  notifyinputQuantity messageErrorinputQuantity">Nhập số lượng!</h5>
                        <h5 style="margin-top:-1%" hidden class="messageError  notifyinputQuantity1 messageErrorinputQuantity1">Nhập số lượng!</h5>
                        <h5 style="margin-top:-1%" hidden class="messageError  notifyinputQuantity_tonkho messageErrorinputQuantity_tonkho">Nhập số lượng!</h5>
                    </td>
                    <td></td>
                    <td style="padding: 10px 10px 0px 12px; color: red">
                        <h5 style="margin-top:-1%" hidden class="messageError  notifyinputPrice messageErrorinputPrice">Nhập giá!</h5>
                        <h5 style="margin-top:-1%" hidden class="messageError  notifyinputQuantity2 messageErrorinputQuantity2">Giá nhập phải lớn hơn 0</h5>
                    </td>
                    <td></td>
                </tr>
            </table>
            <span id="productItemError" class="messageError" style="color:red"></span>
            <hr style="margin-top: 10px !important" />
            <div id="orderItems" class="table-responsive"></div>
            <div id="Items" hidden class="table-responsive"></div>
        </form>
    </div>
</div>
